<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.StarterAplication"
        tools:targetApi="31">

        <activity
            android:name=".ui.UserLibrary"
            android:exported="true">
        </activity>
        <activity
            android:name=".ui.MyLibrary"
            android:exported="true">
        </activity>

        <activity
            android:name=".ui.passwordRecovery"
            android:exported="true">
        </activity>

        <activity
            android:name=".ui.MainStartApp"
            android:exported="true">
        </activity>
            
        <activity
            android:name=".ui.authorScreen"
            android:exported="true">
        </activity>

        <activity
            android:name=".ui.LoadingScreen"
            android:exported="true"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.Login"
            android:exported="true">
        </activity>
        <activity
            android:name=".ui.LoginCreateAccount"
            android:exported="true">
        </activity>
        <activity
            android:name=".ui.MainActivity"
            android:exported="true">
        </activity>

        <activity
            android:name=".ui.BookDetailsActivity"
            android:exported="true">
        </activity>

        <activity
            android:name=".ui.HomeActivity"
            android:exported="false" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>